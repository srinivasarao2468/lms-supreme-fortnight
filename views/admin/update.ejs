<body>
  <%- include ('adminNav.ejs')%>
    <div class="dash">
      <%- include ('adminSide.ejs')%>
        <div class="main-container">
          <div class="pay-con all-forms">
            <h3>Update product ðŸ‘‹</h3>
            <form class="register-form justify-content-between" method="post" action="/update/<%= product.id %>/?_method=PATCH">
              <div class="d-flex m-0 p-0" style="gap:12px">
                <input type="text" name="title" class="form-control " id="floatingInput" value="<%= product.title %>" placeholder="title">
                <input type="text" name="img" class="form-control" id="floatingInput" value="<%= product.img %>" placeholder="image url">
              </div>
              <div class="d-flex m-0 p-0" style="gap:12px">
                <input type="text" name="price" class="form-control" id="floatingInput"value="<%= product.price %>" placeholder="price">
                <input type="text" name="status" maxlength="1" minlength="1" pattern="[01]"value="<%= product.status %>" class="form-control"
                  id="floatingInput" placeholder="status">
              </div>
              <textarea class="p-des p-2" name="desc" id="" cols="20" rows="3"
                placeholder="course description"><%= product.desc %></textarea>
              <button type="submit" class="btn bg-register text-black mt-3 px-5 py-1 fw-bold w-100">Update
                product</button>
            </form>
          </div>
        </div>
        <%- include ('adminMobileNav.ejs')%>

</body>
